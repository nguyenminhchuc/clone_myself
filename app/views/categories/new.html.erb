<div class="jumbotron">
  <h3 class="display text-center">New Category</h3>
</div>
<p>
<%= form_with scope: :category, url: categories_path, local: true do |form| %>
  <%= render 'error' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <p>
      <%= form.label :category %><br>
      <%= form.text_field :category %>
    </p>

    <p>
      <%= form.submit t "create_category", class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
  </div>
