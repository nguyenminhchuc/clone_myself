<h1>list book tour</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Telephone</th>
      <th scope="col">address</th>
      <th scope="col">Number users</th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |t| %>
    <tr>
      <td><%= t.name %></td>
      <td><%= t.telephone %></td>
      <td><%= t.address %></td>
      <td><%= t.number_user %></td>
      <td>
        <%= link_to t("edit"), edit_book_path(t), class:"btn btn-primary" %>
        <%= link_to t("delete"), book_path(t), class:"btn btn-danger",
              method: :delete, data: { confirm: t("you_sure") } %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Tour</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Number days</th>
      <th scope="col">City</th>
      <th scope="col">Country</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    <% @tour.each do |t| %>
    <tr>
      <td><%= t.tour_name %></td>
      <td><%= t.description %></td>
      <td><%= t.price %></td>
      <td><%= t.number_day %></td>
      <td><%= t.city %></td>
      <td><%= t.country %></td>
      <td>
         <%= image_tag t.image_url.to_s, class:"fixsize" %>
      </td>
      <td>
        <%= link_to t("edit"), edit_admin_tour_path(id: current_user.id), class:"btn btn-primary" %>
        <%= link_to t("delete"), admin_tour_path(t), class:"btn btn-danger",
              method: :delete, data: { confirm: t("you_sure") } %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>
