default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: <%= ENV["USERNAME"] %>
  password: <%= ENV["PASSWORD"] %>
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: booking_tour_development
test:
  <<: *default
  database: booking_tour_test

production:
  <<: *default
  database: db/production.mysql2
